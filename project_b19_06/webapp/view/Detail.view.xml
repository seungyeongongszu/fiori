<mvc:View controllerName="projectb1906.controller.Detail"
xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:t='sap.ui.table'
    >
    <Page title="Detail Page" 
          showNavButton="true" 
          navButtonPress="onNavmain" > 
        <VBox class="sapUiSmallMargin">
            <f:SimpleForm id="SimpleFormDisplay354"
                editable="false"
                layout="ResponsiveGridLayout"
                singleContainerFullSize="false" >
                <f:content>
                    <Label text="OrderID" />
                    <Text  text="{OrderID}" />
                    <Label text="CustomerID" />
                    <Text text="{CustomerID}" />
                    <Label text="EmployeeID" />
                    <Text text="{EmployeeID}" />
                    <Label text="OrderDate" />
                    <Text  text="{
                        path : 'OrderDate',
                        type : 'sap.ui.model.type.Date',
                        formatOptions : {
                            pattern : 'yyyy-MM-dd'
                        }}" />
                    <Label text="RequiredDate" />
                    <Text  text="{RequiredDate}" />
                    <Label text="ShippedDate" />
                    <Text  text="{ShippedDate}" />
                    <Label text="ShipVia" />
                    <Text  text="{ShipVia}" />
                    <Label text="ShipName" />
                    <Text  text="{ShipName}" />
                    <Label text="ShipAddress" />
                    <Text  text="{ShipAddress}" />
                    <Label text="ShipCity" />
                    <Text  text="{ShipCity}" />
                    <Label text="ShipRegion" />
                    <Text  text="{ShipRegion}" />
                    <Label text="ShipPostalCode" />
                    <Text  text="{ShipPostalCode}" />
                    <Label text="ShipCountry" />
                    <Text  text="{ShipCountry}" />
                </f:content>
            </f:SimpleForm>
	    </VBox>
    </Page>
</mvc:View>